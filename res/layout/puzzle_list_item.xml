<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="72dp" >

    <com.haw3d.jadvalKalemat.view.VerticalProgressBar
        android:id="@+id/puzzle_progress"
        android:layout_width="18dp"
        android:layout_height="72dp" />

    <TextView
        android:textColorHighlight="#CC191F"
        android:id="@+id/puzzle_date"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|center_vertical"
        android:lines="3"
        android:singleLine="false"
        android:paddingLeft="6dp"
        android:text="Wednesday Jan 2, 2001"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/puzzle_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="New York Times"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/puzzle_caption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="#AFAFAF"
            android:paddingLeft="12dp"
            android:text="Caption text"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>
